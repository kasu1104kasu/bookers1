<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<h1>Books</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="choice3"><%= link_to "Show", book_path(book) %></td>
      <td class="choice3"><%= link_to "Edit", edit_book_path(book) %></td>
      <td class="choice3"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @book.errors.any? %>
  <%= @book.errors.count %><span> errors prohibited this book from being saved:</span><br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>
<br>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p class="submit"><%= f.submit 'Create Book' %></p>
<% end %>
