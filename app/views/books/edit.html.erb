<% if @book.errors.any? %>
  <%= @book.errors.count %><span> errors prohibited this book from being saved:</span><br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>
<br>

<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p class="submit"><%= f.submit 'Update Book' %></p>
<% end %>

<p class="choice">
   <span class="show"><%= link_to "Show", book_path(@book) %></span> |  <a class="back" href="/books">Back</a>
</p>